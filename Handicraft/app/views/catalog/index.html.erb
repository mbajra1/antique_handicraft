<h1>Product Catalog</h1>

<h2> Thangkas </h2>
<div class="scroll">
  <table>
    <% if @thangkas %>
        <%  @thangkas.each do |thangka| %>
            <td>

              <dt><%= link_to image_tag(thangka.image_url,class: 'list_suggested_image',:border =>0),product_details_index_path(product_id: thangka.product_id)%></dt>
              <dt><%= thangka.product_name %></dt>
              <dt><%= truncate thangka.description,lenght: 50 %></dt>
              <dt><%= number_to_currency(thangka.price) %></dt>

            </td>
        <%end%>
    <% end %>
  </table>
</div>
<br>
<hr>

