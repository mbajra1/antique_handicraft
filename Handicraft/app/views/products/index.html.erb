<h3>LISTING PRODUCTS</h3><br/>
<table class="table table-striped">

  <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

        <td class="col-md-2"><%= image_tag("thumbnails/" + product.image_url, class: 'img-responsive img-thumbnail') %></td>
        <td class="col-md-1">
          <p class="lead"><%= product.name %></p>
          <p class="lead"><%= number_to_currency(product.price)%></p>
        </td>
        <td class="col-md-4">
          <dl>
            <dd><%= product.description[1..200]+"..." %></dd>
          </dl>
        </td>
        <td class="col-md-2">
          <dl>
            <dd>Category: <%= product.category %></dd><br/>
            <dd>Subcategory: <%= product.subcategory %></dd><br/>
            <dd>Condition: <%= product.product_condition %></dd><br/>
          </dl>
        </td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
  <% end %>
</table>

<br>

<%#= link_to 'New Product', new_product_path %>

<%# Added Bootstrap data modal attribute %>
<%= link_to 'New Product', '#new_product_modal', 'data-toggle' => 'modal' %>


<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_product_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create new product</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
        <%= render 'form', modal: true %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>






