<p id="notice"><%= notice %></p>

<h1>Listing Bid Actions</h1>

<table>
  <thead>
    <tr>
      <th>Bidder</th>
      <th>Bid amount</th>
      <th>Bid cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_actions.each do |bid_action| %>
      <tr>
        <td><%= bid_action.bidder_id %></td>
        <td><%= bid_action.bid_amount %></td>
        <td><%= bid_action.bid_cart %></td>
        <td><%= link_to 'Show', bid_action %></td>
        <td><%= link_to 'Edit', edit_bid_action_path(bid_action) %></td>
        <td><%= link_to 'Destroy', bid_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

