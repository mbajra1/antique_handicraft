<p id="notice"><%= notice %></p>

<h1>Listing Bid Winners</h1>

<table>
  <thead>
    <tr>
      <th>Winner</th>
      <th>Bid product</th>
      <th>Winning amount</th>
      <th>Bid cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_winners.each do |bid_winner| %>
      <tr>
        <td><%= bid_winner.winner_id %></td>
        <td><%= bid_winner.bid_product %></td>
        <td><%= bid_winner.winning_amount %></td>
        <td><%= bid_winner.bid_cart %></td>
        <td><%= link_to 'Show', bid_winner %></td>
        <td><%= link_to 'Edit', edit_bid_winner_path(bid_winner) %></td>
        <td><%= link_to 'Destroy', bid_winner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

