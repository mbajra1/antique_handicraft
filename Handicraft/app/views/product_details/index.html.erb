<h1> Product Details </h1>

  <% for product in @product_details %>
      <div class = "row">
        <div class = "col-md-12">
          <h3><%=product.name%></h3>
        </div>
      </div>
      <div class = "row">
        <div class = "col-md-4">
          <%= image_tag(product.image_url, class: 'img-responsive img-thumbnail') %>
        </div>
        <div class = "col-md-4">
          <p class="description"><%=product.description%></p>
          <p class="description">Price: <span class="price"><%=number_to_currency(product.price)%></span></p>
          <p class="description" >
            <%if product.quantity!=0%>
                Stocks left: &nbsp;<%=product.quantity%>
            <%else%>
                Stocks left: &nbsp;<%='Temporarily Out of Stock'%>
            <%end%>
          </p>
          <form>
            <div class="form-group">
              <label for="quantity">Qty</label>
              <input type="number" name="quantity" id="quantity" class="form-control quantity" min="1" max="5" size="2">
            </div>

          </form>

          <div class="form-group">
            <%if product.quantity!=0%>
                <%=button_to 'Add to Cart', cart_items_path(product_id: product.id,quantity: 1), :class => 'btn btn-large btn-primary' %>
            <%end%>

            <%if product.seller_id=='SEL15002'%>

                <%=link_to 'Add to Bid Cart', new_bid_cart_path(bid_product_id: product.product_id)%>
            <%end%>


          </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
  <%end%>
<br>
<hr>
    <% if current_user.present? %>
        <div class="suggested-content">
          <h3> Suggested Products </h3><br/>
          <div class="row">
            <% if @suggested_items %>
                <%  @suggested_items.each do |suggestion| %>
                    <div class="col-sm-3">
                      <div><%= link_to image_tag("thumbnails/" + suggestion.image_url, class: 'img-responsive img-thumbnail'),product_details_index_path(product_id: suggestion.product_id)%></div>
                      <h3><%= suggestion.name %></h3>
                      <p class="description"><%= truncate suggestion.description,lenght: 50 %></p>
                      <p class="price"><%= number_to_currency(suggestion.price) %></p>
                    </div>
                <%end%>
            <% end %>
          </div>
        </div>
        <hr>
        <div class="history-content">
          <h3>Your viewing history</h3>
            <div class="row">
                <%if @viewing_history %>
                    <% @viewing_history.each do |items_viewed| %>
                      <div class="col-sm-3">
                        <div><%= link_to image_tag("thumbnails/" + items_viewed.image_url, class: 'img-responsive img-thumbnail'),product_details_index_path(product_id: items_viewed.product_id)%></div>
                          <h3><%= items_viewed.product_name %></h3>
                          <p><%= number_to_currency(items_viewed.price) %></p>
                      </div>
                    <%end%>
                <% end %>
              <br/>
            </div>
          <%=link_to "See more...", histories_path%>
        </div>
    <%end%>