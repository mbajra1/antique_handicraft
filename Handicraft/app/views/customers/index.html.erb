<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Email</th>
      <th>Home phone</th>
      <th>Cell phone</th>
      <th>Fax</th>
      <th>Address</th>
      <th>City</th>
      <th>State province</th>
      <th>Zip postal code</th>
      <th>Country region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_id %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.home_phone %></td>
        <td><%= customer.cell_phone %></td>
        <td><%= customer.fax %></td>
        <td><%= customer.address %></td>
        <td><%= customer.city %></td>
        <td><%= customer.state_province %></td>
        <td><%= customer.zip_postal_code %></td>
        <td><%= customer.country_region %></td>
        <!--<td><%#= link_to 'Show', customer %></td>-->
        <td><%= link_to 'Edit', edit_customer_path(customer.id), :class => "btn btn-small btn-success" %></td>
        <td><%= button_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, :class => "btn btn-small btn-info"%>
