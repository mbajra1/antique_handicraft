<p id="notice"><%= notice %></p>

<h3>LISTING CUSTOMERS</h3><br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>CUSTOMER</th>
      <th>PASSWORD</th>
      <th>FIRST NAME</th>
      <th>LAST NAME</th>
      <th>ADDRESS</th>
      <th>EMAIL ADDRESS</th>
      <th>SELLER</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td class="col-md-1"><%= customer.customer_id %></td>
        <td class="col-md-1"><%= customer.password %></td>
        <td class="col-md-3"><%= customer.customer_firstname %></td>
        <td class="col-md-3"><%= customer.customer_lastname %></td>
        <td class="col-md-4"><%= customer.address %></td>
        <td class="col-md-2"><%= customer.email_address %></td>
        <td class="col-md-1"><%= customer.seller_id %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

