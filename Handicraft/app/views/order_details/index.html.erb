<p id="notice"><%= notice %></p>

<h1>Listing Order Details</h1>

<table>
  <thead>
    <tr>
      <th>Order detail</th>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Discount</th>
      <th>Tax status</th>
      <th>Order detail status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.order_detail_id %></td>
        <td><%= order_detail.order_id %></td>
        <td><%= order_detail.product_id %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.unit_price %></td>
        <td><%= order_detail.discount %></td>
        <td><%= order_detail.tax_status %></td>
        <td><%= order_detail.order_detail_status %></td>
        <td><%= link_to 'Show', order_detail %></td>
        <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
        <td><%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

