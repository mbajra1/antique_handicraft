<p id="notice"><%= notice %></p>

<h1>Listing Bid Carts</h1>

<table>
  <thead>
    <tr>
      <th>Bid product</th>
      <th>Bid end date</th>
      <th>Opening price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_carts.each do |bid_cart| %>
      <tr>
        <td><%= bid_cart.bid_product_id %></td>
        <td><%= bid_cart.bid_end_date %></td>
        <td><%= bid_cart.opening_price %></td>
        <td><%= link_to 'Show', bid_cart %></td>
        <td><%= link_to 'Edit', edit_bid_cart_path(bid_cart) %></td>
        <td><%= link_to 'Destroy', bid_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

