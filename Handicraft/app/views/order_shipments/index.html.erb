<p id="notice"><%= notice %></p>

<h1>Listing Order Shipments</h1>

<table>
  <thead>
    <tr>
      <th>Shipment</th>
      <th>Order</th>
      <th>Customer</th>
      <th>Shipper name</th>
      <th>Shipping type</th>
      <th>Shipping name</th>
      <th>Shipping address</th>
      <th>Shipping city</th>
      <th>Shipping state province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_shipments.each do |order_shipment| %>
      <tr>
        <td><%= order_shipment.shipment_id %></td>
        <td><%= order_shipment.order_id %></td>
        <td><%= order_shipment.customer_id %></td>
        <td><%= order_shipment.shipper_name %></td>
        <td><%= order_shipment.shipping_type %></td>
        <td><%= order_shipment.shipping_name %></td>
        <td><%= order_shipment.shipping_address %></td>
        <td><%= order_shipment.shipping_city %></td>
        <td><%= order_shipment.shipping_state_province %></td>
        <td><%= link_to 'Show', order_shipment %></td>
        <td><%= link_to 'Edit', edit_order_shipment_path(order_shipment) %></td>
        <td><%= link_to 'Destroy', order_shipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

