<p id="notice"><%= notice %></p>

<h1>Your Browsing History</h1>

<table border="0" style="border-spacing: 10px; border-collapse: separate;">
  <% @histories.each do |history| %>
      <tr>
        <td><%= link_to image_tag("thumbnails/" + history.image_url,class: 'img-responsive img-thumbnail',:border =>0),product_details_index_path(product_id: history.product_id)%></td>

        <td>

          <dt><%= history.product_name %></dt>
          <dt>Price: <%= number_to_currency(history.price) %></dt>

        </td>

        <td><%= link_to '[Remove from history]', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr>

  <% end %>
</table>

