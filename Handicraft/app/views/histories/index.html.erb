
<h1>Your Browsing History</h1>

<table border="0" style="border-spacing: 20px; border-collapse: separate;" >
  <% @histories.each do |history| %>
      <tr>
        <td><%= link_to image_tag(history.image_url,class: 'list_image',:border =>0),product_details_path(product_id: history.product_id)%></td>

        <td>

          <dt><%= history.product_name %></dt>
          <dt>Price:<%= number_to_currency(history.price) %></dt>

        </td>

        <td class="list_actions" >

        <td><%= button_to '[Delete this item]', history, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-large btn-danger' %></td>

        </td>

      </tr>

  <% end %>
</table>

<br>

